  "devDependencies": {
    "@types/jest": "^26.0.19",
    "@types/module-alias": "^2.0.0",
    "@types/node": "^14.14.13",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.10.0",
    "@typescript-eslint/parser": "^4.10.0",
    "eslint": "^7.15.0",
    "jest": "^26.6.3",
